	<definition name="filmslist" extends="library-base">
		<put-attribute name="title" value="List of all films"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/tiles/filmslist.jsp"></put-attribute>
		<put-list-attribute name="javascripts" inherit="true">
			<add-attribute value="/static/js/filmlist.js" />
		</put-list-attribute>
	</definition>

	<!-- Film details -->
	<definition name="film" extends="library-base">
		<put-attribute name="title" value="Film"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/tiles/film.jsp"></put-attribute>
		<put-list-attribute name="stylesheets" inherit="true">
			<add-attribute value="/static/css/filmdetails.css" />
		</put-list-attribute>
	</definition>

	<!-- Add film -->
	<definition name="addfilm" extends="library-base">
		<put-attribute name="title" value="Add film"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/tiles/addfilm.jsp"></put-attribute>
	</definition>

	<!-- Film created sucessfully -->
	<definition name="filmcreated" extends="library-base">
		<put-attribute name="title" value="Success"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/tiles/filmcreated.jsp"></put-attribute>
