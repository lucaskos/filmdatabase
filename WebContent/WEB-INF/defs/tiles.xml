	<definition name="login" extends="library-base">
		<put-attribute name="title" value="Log in"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/tiles/login.jsp"></put-attribute>
	</definition>
	<!-- Logout Page -->
	<definition name="logout" extends="library-base">
		<put-attribute name="title" value="Logout Page"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/tiles/logout.jsp"></put-attribute>
	</definition>
	<!-- Admin page -->
	<definition name="admin" extends="library-base">
		<put-attribute name="title" value="Admin Page"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/tiles/admin.jsp"></put-attribute>
	</definition>
	<!-- Denied page -->
	<definition name="denied" extends="library-base">
		<put-attribute name="title" value="Access Denied"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/tiles/denied.jsp"></put-attribute>
	</definition>
	<!-- Error page -->
	<definition name="error" extends="library-base">
		<put-attribute name="title" value="Error page"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/tiles/error.jsp"></put-attribute>
	</definition>
	<!-- Create Account -->
	<definition name="newaccount" extends="library-base">
		<put-attribute name="title" value="Create Account"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/tiles/newaccount.jsp"></put-attribute>
	</definition>
	<!-- Account created -->
	<definition name="accountcreated" extends="library-base">
		<put-attribute name="title" value="Success"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/tiles/accountcreated.jsp"></put-attribute>
	</definition>
